{
  "name": "diplicity-web-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.4.3",
    "@fontsource/cabin": "^4.4.5",
    "@jaames/iro": "^5.5.2",
    "@material-ui/core": "^4.11.4",
    "@material-ui/icons": "^4.11.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/react-dom": "^17.0.14",
    "chart.js": "^3.4.0",
    "firebase": "^8.7.0",
    "ga-gtag": "^1.1.0",
    "jquery": "^3.6.0",
    "murmurhash-js": "^1.0.0",
    "pako": "^2.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.6.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test  --watchAll=false --maxWorkers=50% --isolatedModules=true",
    "test-unit": "craco test -t unit.test --watchAll=false --maxWorkers=50% --isolatedModules=true",
    "test-coverage": "craco test --watchAll=false --maxWorkers=50% --isolatedModules=true --silent --ci --coverage --coverageReporters=\"text\" --coverageReporters=\"text-summary\"",
    "eject": "craco eject",
    "lint": "eslint src/**/*.{ts,tsx} --max-warnings 0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "craco-alias": "^3.0.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ]
  }
}
